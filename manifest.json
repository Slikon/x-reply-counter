{
    "manifest_version": 3,
    "name": "X Reply Counter",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "version": "1.3",
    "description": "Track how many replies you've made on X today.",
    "permissions": ["storage", "scripting", "tabs"],
    "content_scripts": [
      {
        "matches": ["*://*.x.com/*"],
        "js": ["content.js"],
        "css": ["counter.css"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "Reply Counter",
      "default_popup": "popup.html"
    }
  }
  