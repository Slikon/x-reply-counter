{
    "manifest_version": 3,
    "name": "X Reply Counter",
    "version": "1.0",
    "description": "Track how many replies you've made on X today.",
    "permissions": ["storage", "scripting"],
    "content_scripts": [
      {
        "matches": ["*://*.x.com/*"],
        "js": ["content.js"],
        "css": ["counter.css"],
        "run_at": "document_idle"
      }
    ],
    "action": {
      "default_title": "Reply Counter"
    }
  }
  